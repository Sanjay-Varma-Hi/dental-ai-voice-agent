# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dental_clinic?retryWrites=true&w=majority

# Twilio Configuration
TWILIO_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# OpenAI Configuration (optional if using DeepSeek)
OPENAI_API_KEY=your_openai_api_key_here

# DeepSeek Configuration (LLM)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# STT/LLM Provider Toggles
STT_PROVIDER=faster_whisper   # options: faster_whisper, openai
LLM_PROVIDER=deepseek         # options: deepseek, openai

# Azure TTS Configuration (optional)
AZURE_TTS_KEY=your_azure_tts_key_here
AZURE_TTS_REGION=your_azure_region_here

# Optional: Server Configuration
HOST=http://localhost:8000
PORT=8000

